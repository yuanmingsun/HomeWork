<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBg</item>
    </style>
    <style name="HeaderImgStyle">
        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">77dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@mipmap/avatar_default</item>
    </style>
    <style name="ItemHeaderImgStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/avatar_default</item>
    </style>
    <style name="ItemNameTextStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorItemName</item>
    </style>
    <style name="ItemContentTextStyle" parent="@style/ItemNameTextStyle">
        <item name="android:textColor">@color/colorItemContent</item>
    </style>
    <style name="ItemImgStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>
